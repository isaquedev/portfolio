---
import { ThemeSelector } from "@/components/Header/ThemeSelector";
import { LanguageSelector } from "@/components/Header/LanguageSelector";
import type { PageDefaultProps } from "@/types/PageDefaultProps";
import { translations } from '@/utils/translations'

const { language } = Astro.props as PageDefaultProps

const t = translations[language]
---

<header class="grid grid-cols-3 mx-auto max-w-screen-xl gap-2 p-6 items-center">
  <div>
    <h1 class="font-medium text-xl flex gap-2 items-center">
      <img src="/favicon.svg" alt="Logo" />
      <span class="pb-1">Isaque Hernandes</span>
    </h1>
  </div>
  <nav class="flex justify-center">
    <ul class="flex font-medium gap-4">
      <li class="hover:font-bold hover:text-sky-500"><a href="#about">{t.header.about}</a></li>
      <li class="hover:font-bold hover:text-sky-500"><a href="#skills">{t.header.skills}</a></li>
      <li class="hover:font-bold hover:text-sky-500"><a href="#career">{t.header.career}</a></li>
      <li class="hover:font-bold hover:text-sky-500"><a href="#projects">{t.header.projects}</a></li>
    </ul>
  </nav>
  <div class="flex justify-end gap-2">
    <LanguageSelector client:idle language={language} />
    <ThemeSelector client:load language={language} />
  </div>
</header>